<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="start"
    android:layout_alignParentLeft="true">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/boticon1" />


<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="8dp"
    app:cardBackgroundColor="@color/darkblue"
    app:cardCornerRadius="8dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/idTVBot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:padding="3dp"
            android:text="Bot message"
            android:textSize="15dp"
            android:textColor="@color/white" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/lightblue"
            app:cardCornerRadius="20dp"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:elevation="10dp"
            app:cardElevation="10dp"
            android:id="@+id/cardV">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/videoThumbnailIV"
                        android:layout_width="100dp"
                        android:layout_height="56dp"
                        android:src="@drawable/anxiety"
                        android:scaleType="centerCrop"
                        android:padding="10dp"
                        android:layout_margin="10dp"
                        android:background="@color/lightblue"/>

                    <TextView
                        android:id="@+id/videoTitleTV"
                        android:layout_width="108dp"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:text="This video might help you! Tap to watch it!"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>



        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.cardview.widget.CardView>

</LinearLayout>